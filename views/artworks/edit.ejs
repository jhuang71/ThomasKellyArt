<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%= artwork.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/artworks/<%= artwork._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class='form-control' type="text" name="artwork[name]" value="<%= artwork.name%>">
                </div>
                <div class="form-group">
                        <input class='form-control' type="number" name="artwork[price]" value="<%= artwork.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class='form-control' type="text" name="artwork[image]" value="<%= artwork.image%>">
                </div>
                <div class="form-group">
                    <input class='form-control' type="text" name="artwork[description]" value="<%= artwork.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMMIT!</button>
                </div>
            </form>
            <a href="/artworks">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>
